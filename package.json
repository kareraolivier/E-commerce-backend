{
  "name": "e-commerce-backend",
  "version": "0.0.1",
  "description": "E-commerce project developed with TypeORM.",
  "type": "commonjs",
  "devDependencies": {
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.8.7",
    "@types/sequelize": "^4.28.20",
    "sequelize-cli": "^6.6.2",
    "ts-node": "10.9.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@sequelize/postgres": "^7.0.0-alpha.43",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/memory-cache": "^0.2.6",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "memory-cache": "^0.2.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "typeorm": "0.3.20",
    "uuid": "^11.0.2"
  },
  "scripts": {
    "watch": "tsc -w",
    "dev": "nodemon build/index.js",
    "start:dev": "concurrently \"tsc -w\" \"nodemon build/index.js\"",
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:up": "npx sequelize-cli db:migrate --config ./config/config.js",
    "migrate:down": "npx sequelize-cli db:migrate:undo",
    "migration": " npm run typeorm migration:run -- -d ./models/index.ts",
    "seed": "npx sequelize-cli db:seed:all"
  }
}
